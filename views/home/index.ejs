<main class="container mx-auto px-4 py-6">
    <!-- Slideshow/Carousel Section -->
    <%- include('../partials/slider', {sliders: []}) %>

    <!-- Featured Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <!-- Internet Service -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden group hover:shadow-lg transition-all duration-300">
            <div class="relative h-48 bg-gradient-to-r from-blue-500 to-blue-600 p-6">
                <i class="fas fa-wifi text-white text-4xl mb-4"></i>
                <h3 class="text-white text-xl font-semibold">Dịch vụ Internet</h3>
                <p class="text-white/80 mt-2 text-sm">Tốc độ cao, ổn định, giá cả hợp lý</p>
                <div
                    class="absolute -bottom-6 right-6 w-16 h-16 bg-yellow-400 rounded-full flex items-center justify-center text-white transform group-hover:scale-110 transition-transform">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
            <div class="p-6">
                <ul class="space-y-2 text-gray-600">
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-2"></i>
                        Tốc độ lên đến 1Gbps
                    </li>
                    <li class="flex items-center">
                        <i class="fas fa-check text-green-500 mr-2"></i>
                        Đường truyền ổn định 24/7
                    </li>
                </ul>
            </div>
        </div>

        <!-- MyTV Service -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden group hover:shadow-lg transition-all duration-300">
            <!-- MyTV content (same as in index.html) -->
            <%- include('../partials/services/mytv') %>
        </div>

        <!-- Mobile Service -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden group hover:shadow-lg transition-all duration-300">
            <!-- Mobile service content (same as in index.html) -->
            <%- include('../partials/services/mobile') %>
        </div>
    </div>

