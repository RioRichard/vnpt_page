<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/admin.css" rel="stylesheet">
</head>

<body class="bg-gray-50 min-h-screen flex">
    <!-- Admin Sidebar -->
    <aside class="bg-gray-800 text-white w-64 min-h-screen flex flex-col">
        <!-- Logo -->
        <div class="p-4 bg-gray-900">
            <a href="/admin" class="flex items-center space-x-2">
                <img src="/images/logo.png" alt="Logo" class="h-8 w-auto">
                <span class="text-xl font-bold">Admin Panel</span>
            </a>
        </div>

        <!-- Navigation Links -->
        <nav class="flex-1 p-4">
            <ul class="space-y-2">
                <li>
                    <a href="/admin" class="flex items-center p-2 rounded-lg hover:bg-gray-700 transition-colors">
                        <i class="fas fa-chart-line w-6"></i>
                        <span>Dashboard</span>
                    </a>
                </li>

                <!-- Posts Management -->
                <li class="py-2">
                    <span class="px-2 text-xs text-gray-400 uppercase">Quản lý bài viết</span>
                    <ul class="mt-2 space-y-1">
                        <li>
                            <a href="/admin/posts/create"
                                class="flex items-center p-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i class="fas fa-plus w-6"></i>
                                <span>Tạo bài viết mới</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/posts"
                                class="flex items-center p-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i class="fas fa-list w-6"></i>
                                <span>Danh sách bài viết</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- Page Settings -->
                <li class="py-2">
                    <span class="px-2 text-xs text-gray-400 uppercase">Cài đặt trang</span>
                    <ul class="mt-2 space-y-1">
                        <li>
                            <a href="/admin/settings/contact"
                                class="flex items-center p-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i class="fas fa-phone w-6"></i>
                                <span>Trang liên hệ</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/settings/about"
                                class="flex items-center p-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i class="fas fa-info-circle w-6"></i>
                                <span>Trang giới thiệu</span>
                            </a>
                        </li>
                    </ul>
                </li>

                <!-- User Management -->
                <li class="py-2">
                    <span class="px-2 text-xs text-gray-400 uppercase">Quản lý người dùng</span>
                    <ul class="mt-2 space-y-1">
                        <li>
                            <a href="/admin/users"
                                class="flex items-center p-2 rounded-lg hover:bg-gray-700 transition-colors">
                                <i class="fas fa-users w-6"></i>
                                <span>Danh sách người dùng</span>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- User Profile Section -->
        <div class="p-4 bg-gray-900">
            <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                    <i class="fas fa-user-circle text-2xl"></i>
                </div>
                <div class="flex-1">
                    <p class="text-sm font-medium truncate">
                    </p>
                    <div class="flex items-center space-x-2 mt-1">
                        <a href="/" class="text-xs text-gray-400 hover:text-white">Trang chủ</a>
                        <span class="text-gray-600">•</span>
                        <a href="/auth/logout" class="text-xs text-gray-400 hover:text-white">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm">
            <div class="flex items-center justify-between p-4">
                <h1 class="text-xl font-semibold text-gray-800">
                    <%= title %>
                </h1>
                <div class="flex items-center space-x-3">
                    <button id="mobile-menu-button" class="md:hidden text-gray-500 hover:text-gray-700">
                        <i class="fas fa-bars text-xl"></i>
                    </button>
                </div>
            </div>
        </header>

        <!-- Page Content -->
        <main class="flex-1 p-6 overflow-auto">
            <%- body %>
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 mt-auto">
            <div class="max-w-7xl mx-auto py-4 px-4">
                <div class="text-center text-sm text-gray-500">
                    <p>&copy; <%= new Date().getFullYear() %> VNPT. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/admin.js"></script>
</body>

</html>
